# NPM Configuration for Production Builds
# ビルド時間最適化とキャッシュ効率向上

# Engine requirements
engine-strict=true

# Package installation optimization
prefer-offline=true
cache-min=604800
progress=false
fund=false
audit=false

# Build performance  
maxsockets=5
fetch-timeout=60000
fetch-retry-maxtimeout=60000

# Production settings
production=false
optional=true
dev=true

# Cache settings (container環境用)
cache=/tmp/npm-cache

# Registry settings
registry=https://registry.npmjs.org/

# Security
audit-level=moderate

# Logging
loglevel=warn
