# ==============================================================================
# FukuPochi 本番環境 環境変数テンプレート
# 本番デプロイ前に全ての値を設定してください
# ==============================================================================

# アプリケーション基本設定
APP_NAME=FukuPochi
APP_ENV=production
APP_KEY=base64:YOUR_32_CHARACTER_SECRET_KEY_HERE
APP_DEBUG=false

# サーバー設定
SERVER_IP=YOUR_SERVER_IP_ADDRESS
APP_URL=http://${SERVER_IP}

# 言語・地域設定
APP_LOCALE=ja
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ja_JP

# メンテナンス設定
APP_MAINTENANCE_DRIVER=file

# PHP設定
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ログ設定
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==============================================================================
# データベース設定（MySQL）
# ==============================================================================
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=app_prod_db
DB_USERNAME=db_user_prod
DB_PASSWORD=RANDOM_STRONG_PASSWORD_32_CHARS

# データベースルートパスワード（docker-compose用）
DB_ROOT_PASSWORD=RANDOM_ROOT_PASSWORD_32_CHARS

# ==============================================================================
# セッション設定
# ==============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ==============================================================================
# キャッシュ・キュー設定
# ==============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=redis
CACHE_DRIVER=redis

# Redis設定
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=RANDOM_REDIS_PASSWORD_32_CHARS
REDIS_PORT=6379
REDIS_DB=0

# Memcached設定（使用する場合）
MEMCACHED_HOST=127.0.0.1

# ==============================================================================
# メール設定
# ==============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=YOUR_MAIL_USERNAME
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================================================
# AWS設定（S3、SES等を使用する場合）
# ==============================================================================
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=ap-northeast-1
AWS_BUCKET=your-s3-bucket-name
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================================================
# CORS・API設定
# ==============================================================================
# フロントエンドURL（SvelteKit）
FRONTEND_URL=http://${SERVER_IP}
SANCTUM_STATEFUL_DOMAINS=${SERVER_IP}

# ==============================================================================
# SSL・セキュリティ設定
# ==============================================================================
# ドメイン名（IPアドレスで運用）
DOMAIN=${SERVER_IP}

# セキュリティキー（JWT等で使用）
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE

# ==============================================================================
# 外部サービス設定
# ==============================================================================

# Google設定（OAuth、Analytics等）
GOOGLE_CLIENT_ID=GOOGLE_OAUTH_CLIENT_ID
GOOGLE_CLIENT_SECRET=GOOGLE_OAUTH_CLIENT_SECRET

# Facebook設定（OAuth等）
FACEBOOK_CLIENT_ID=FACEBOOK_OAUTH_CLIENT_ID
FACEBOOK_CLIENT_SECRET=FACEBOOK_OAUTH_CLIENT_SECRET

# Twitter設定（OAuth等）
TWITTER_CLIENT_ID=TWITTER_OAUTH_CLIENT_ID
TWITTER_CLIENT_SECRET=TWITTER_OAUTH_CLIENT_SECRET

# ==============================================================================
# 決済サービス設定
# ==============================================================================

# Stripe設定
STRIPE_KEY=pk_live_STRIPE_PUBLIC_KEY
STRIPE_SECRET=sk_live_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_STRIPE_WEBHOOK_SECRET

# PayPal設定
PAYPAL_CLIENT_ID=PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=PAYPAL_CLIENT_SECRET
PAYPAL_MODE=live

# ==============================================================================
# 監視・分析設定
# ==============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry（エラートラッキング）
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================================================
# パフォーマンス設定
# ==============================================================================

# OPcache設定（php.ini で設定済み）
OPCACHE_ENABLE=true

# Laravel Telescope（本番では無効化推奨）
TELESCOPE_ENABLED=false

# Laravel Horizon（キュー管理）
HORIZON_DOMAIN=admin.your-domain.com

# ==============================================================================
# バックアップ設定
# ==============================================================================

# データベースバックアップ
BACKUP_DISK=s3
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_NOTIFICATION_MAIL=admin@your-domain.com

# ==============================================================================
# その他の設定
# ==============================================================================

# タイムゾーン
TZ=Asia/Tokyo

# アプリケーション固有の設定
VITE_APP_NAME="${APP_NAME}"

# API レート制限
THROTTLE_REQUESTS=60
THROTTLE_MINUTES=1

# ファイルアップロード制限
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ==============================================================================
# Docker Compose固有の設定
# ==============================================================================

# コンテナのメモリ制限
MYSQL_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=128m
PHP_MEMORY_LIMIT=256m

# ログレベル
DOCKER_LOG_LEVEL=warn